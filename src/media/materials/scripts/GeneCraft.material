material GeneCraft/Bone
{
    technique
    {
        pass
        {
            ambient 0.6 0.6 0.6
            diffuse 0.6 0.6 0.6
			specular 0 0 0 0
            
            texture_unit
            {
				texture bone.jpg
            }
        }
    }
}

material GeneCraft/Bone_Selected : GeneCraft/Bone    
{
    technique
    {
		pass
        {
			ambient 0.3 0.3 0.3
            diffuse 0.3 0.3 0.3
        }
    }
}

